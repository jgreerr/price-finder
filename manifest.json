{
    "name": "Price finder",
    "description": "Find prices.",
    "version": "0.0.1",
    "manifest_version": 3,
    "options_page": "html/options.html",
    "background": {
        "service_worker" : "js/service-workers/background.js"
    },
    "action": {
        "default_popup": "html/popup.html"
    },
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage",
        "scripting"
    ],
    "content_scripts": [{
        "run_at": "document_idle",
        "matches": [
            "https://*.ebay.com/*", 
            "https://*.amazon.com/*",
            "https://*.bestbuy.com/*",
            "https://*.walmart.com/*",
            "https://*.newegg.com/*"
        ],
        "js": ["js/content-scripts/find-section.js"]
    }]
}